{
  // Window.
  "window.zoomLevel": 0,
  "window.newWindowDimensions": "maximized",

  // Workbench.
  "workbench.startupEditor": "none",
  "workbench.editor.tabSizing": "shrink",
  "workbench.activityBar.visible": true,
  "workbench.panel.defaultLocation": "right",

  // UI features.
  "breadcrumbs.enabled": true,

  // Explorer.
  "explorer.autoReveal": false,
  "explorer.compactFolders": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // Editor.
  "editor.fontSize": 11,
  "editor.fontFamily": "SFMono-Regular, Hack, Monaco, Menlo, Courier, monospace",
  "editor.tabSize": 2,
  "editor.renderWhitespace": "boundary",
  "editor.renderIndentGuides": true,
  "editor.insertSpaces": true,
  "editor.formatOnPaste": true,
  "editor.scrollBeyondLastLine": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.rulers": [80],
  "editor.renderControlCharacters": true,

  // Diff editor.
  "diffEditor.renderSideBySide": false,

  // SCM.
  "scm.diffDecorationsGutterWidth": 2,
  "scm.defaultViewMode": "tree",

  // Terminal.
  "terminal.integrated.shell.osx": "/usr/local/bin/zsh",
  "terminal.integrated.fontSize": 10,
  "terminal.integrated.scrollback": 2500,
  "terminal.external.osxExec": "iTerm2.app",

  // Debug console.
  "debug.console.fontSize": 10,

  // Log output.
  "[Log]": {
    "editor.fontSize": 10
  },

  // Files.
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.exclude": {
    "**/.git": false
  },

  // Telemetry - disable this so you don't send usage stats to Microsoft.
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,

  // Problems.
  "problems.showCurrentInStatus": true,

  // Ruby specific config.
  "ruby.useBundler": true,
  "ruby.pathToBundler": "/Users/ritchie/.rbenv/shims/bundle",
  "ruby.format": "rubocop",
  "ruby.intellisense": false,
  "ruby.codeCompletion": false,
  "ruby.lint": { "rubocop": true },
  // "ruby.locate": { "exclude": "**/*.rb"},

  "[ruby]": {
    "editor.rulers": [80]
  },

  // Javascript specific config.
  "javascript.updateImportsOnFileMove.enabled": "always",
  "eslint.packageManager": "yarn",

  // Apex specific config.
  "salesforcedx-vscode-apex.java.home": "/Library/Java/JavaVirtualMachines/openjdk-11.0.2.jdk/Contents/Home",
  "salesforcedx-vscode-core.orgBrowser.enabled": true,
  "salesforcedx-vscode-core.retrieve-test-code-coverage": true,
  "salesforcedx-vscode-core.show-cli-success-msg": false,
  "[apex]": {
    "editor.rulers": [120]
  },

  // TODO Highlight.
  "todohighlight.keywords": [
    "NOTE:"
  ],

  // Theme.
  "workbench.colorTheme": "Material Theme Palenight High Contrast",
  "workbench.iconTheme": "eq-material-theme-icons-palenight",
  "materialTheme.accent": "Bright Teal",
  "editor.tokenColorCustomizations": {
    "[Material Theme Palenight High Contrast]": {
      "textMateRules": [{
          "scope": [
            "punctuation.definition.variable",
            "variable.other.readwrite.instance"
          ],
          "settings": {
            "foreground": "#ff5370"
          }
        },
        {
          "scope": [
            "source",
            "variable.other",
            "keyword.query.field"
          ],
          "settings": {
            "foreground": "#AFB5D8"
          }
        },
        {
          "scope": [
            "string",
            "entity.other.inherited-class"
          ],
          "settings": {
            "foreground": "#A3E88D"
          }
        },
        {
          "scope": [
            "constant.language.nil",
            "constant.language.boolean",
            "storage.type"
          ],
          "settings": {
            "foreground": "#f07178"
          }
        },
        {
          "scope": [
            "constant.language"
          ],
          "settings": {
          }
        }
      ]
    }
  }
}
